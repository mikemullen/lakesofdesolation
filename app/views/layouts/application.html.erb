<!DOCTYPE html>
<html>

<head>
  <title> <%= full_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <style><%= bg_img(yield(:file_name)) %></style>
 
</head>

<body>

  <div id="container">

    <div id="body">
      <% unless current_page?(root_path) %>
      <div class="homebutton"><%= link_to image_tag("ldbadge.png", size: "50x50", alt: "Home button"), root_path %></div>
      <% end %>

    <%= yield %>
    </div>

    <div id="footer">
      <footer>
        <div>
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Lakes", lakes_path %></li>
        </ul>
        </div>
      </footer>
    </div>

  </div>

</body>

</html>