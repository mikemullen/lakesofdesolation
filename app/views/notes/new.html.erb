<h1>New Note</h1>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      
      <%= form_for :note, url: notes_path, :html => { :multipart => true }                                                                do |f| %>
        <p>
          <%= f.label :display_date %> - YYYY-MM-DD<br />
          <%= f.date_field :sort_date %>
        </p>

        <p>
          <%= f.label :author %><br />
          <%= f.text_field :author, size: "40" %>
        </p>

        <p>
          <%= f.label :title %><br />
          <%= f.text_field :title, size: "118" %>
        </p>

        <p>
          <%= f.label :text %><br />
          <%= f.text_area :text, size: "120x2" %>
        </p>

        <p>
          <%= f.label :image_caption %><br />
          <%= f.text_field :imgcap, size: "118" %>
        </p>

        <p>
          <%= f.file_field :photo %>
        </p>

        <%= f.fields_for :note_images, :html => { :multipart => true } do |builder| %>

        <p>
        <%= builder.label :caption, "Alternative Image Caption" %>
        <%= builder.text_field :caption %>
        <%= builder.label :image, "Image File" %>
        <%= builder.file_field :image %>
        </p>

        <% end %>

        <p>
          <%= f.submit "Post", class: "btn btn-primary" %>
        </p>
      <% end %>
    </div>
  </div>